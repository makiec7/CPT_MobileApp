<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_menu">
        <!-- HEADER -->
        <include layout="@layout/header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/app_name_layout"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_left"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_report_fault"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/add_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/add_fault"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_show_faults"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/my_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/my_faults"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_alarms"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/emergency_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/alarm_numbers"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_contact"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/contact_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/contact_administration"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_right"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/menu_left"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_edit_fault"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/edit_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/edit_fault"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_local_faults"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/all_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/all_faults"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_about"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/info_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/about_program"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_logout"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/logout_icon"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/logout"/>
                </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>