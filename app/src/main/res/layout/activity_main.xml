<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_menu">
        <LinearLayout
            android:id="@+id/app_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Centrum Pomocy Technicznej"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/app_name" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name_layout"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/menuLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:text="Zgłoś usterkę"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:src="@drawable/add_icon"
                    android:scaleType="centerInside"
                    android:id="@+id/btn_report_fault" />

                <ImageButton
                    android:text="Moje zgłoszenia"
                    android:src="@drawable/my_icon"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_show_faults"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="Telefony alarmowe"
                    android:src="@drawable/emergency_icon"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_alarms"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="Kontakt"
                    android:src="@drawable/contact_icon"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_contact"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menuRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_name_layout"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:text="Edytuj zgłoszenie"
                    android:src="@drawable/edit_icon"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_edit_fault"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="Wszystkie usterki"
                    android:src="@drawable/all_icon"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_local_faults"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="O programie"
                    android:src="@drawable/info_icon"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_about"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="Wyloguj"
                    android:src="@drawable/logout_icon"
                    android:backgroundTint="@color/colorAccent"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_logout"
                    android:layout_weight="1" />
            </LinearLayout>
         </LinearLayout>
    </RelativeLayout>
</ScrollView>