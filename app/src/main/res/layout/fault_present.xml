<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu">
        <!-- HEADER -->
        <include layout="@layout/header"
            android:id="@+id/header"/>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_weight="40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_gravity="fill_horizontal|left"
                android:id="@+id/id_layout" >
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/fault_number"
                    android:id="@+id/tv_id_text" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/status"
                    android:id="@+id/tv_status" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/user"
                    android:id="@+id/tv_issuer" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/obj_number"
                    android:id="@+id/tv_object_number_text" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/room_number"
                    android:id="@+id/tv_room_number_text" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/datetime"
                    android:id="@+id/tv_datetime_text" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/topic"
                    android:id="@+id/tv_topic_text" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenDarkBackground"
                    android:text="@string/description"
                    android:id="@+id/tv_description_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal|right"
                android:id="@+id/issuer_id_layout" >
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_id" />
                <ImageView
                    style="@style/AppTheme.ImageView"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:id="@+id/iv_status" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_issuer_id" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_object_number" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:text="1.02"
                    android:id="@+id/tv_room_number" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_datetime" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_topic" />
                <TextView
                    style="@style/AppTheme.TextViewHalfScreenWhiteBackground"
                    android:id="@+id/tv_description" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>