<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.cpt.cpt_mobileapp.activity.LoginActivity">
    <!-- HELLO SCREEN -->
        <LinearLayout
            android:id="@+id/app_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/logo_pl_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Centrum Pomocy Technicznej"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/app_name" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/app_name_layout"
        android:orientation="vertical">
        <!-- INDEX NUMBER -->
        <TextView
            android:text="Numer indeksu:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_login"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:textSize="20dp" />
        <!-- PASSWORD -->
        <TextView
            android:text="HasÅ‚o:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_password" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!-- CONFIRM BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:id="@+id/delete_bt_layout">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:id="@+id/btn_login"
                android:text="Zaloguj"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
