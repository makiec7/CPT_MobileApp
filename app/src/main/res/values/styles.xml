<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="AppTheme.ButtonDark" parent="AppTheme.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ButtonWhite" parent="AppTheme.Button">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.SmallTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.ShortTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.TextViewHalfScreenDarkBackground" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TextViewHalfScreenWhiteBackground" parent="AppTheme.TextView">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableLeft">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:gravity">fill</item>
        <item name="android:background">@color/colorWhite</item>

    </style>

</resources>
