<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="AppTheme.ButtonDark" parent="AppTheme.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ButtonWhite" parent="AppTheme.Button">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">fill</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.TextViewHalfScreenDarkBackground" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TextViewHalfScreenWhiteBackground" parent="AppTheme.TextView">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
